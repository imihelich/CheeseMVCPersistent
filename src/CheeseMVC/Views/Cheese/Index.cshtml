@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

@foreach (CheeseMVC.Models.Cheese cheese in Model)
{
    <table class="table">
        <tr>
            <th>Name:</th>
            <td>@cheese.Name</td>
        </tr>
        <tr>
            <th>Description:</th>
            <td>@cheese.Description</td>
        </tr>
        <tr>
            <th>Category:</th>
            <td>@cheese.Category.Name</td>
        </tr>

    </table>
}

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add</a> | <a asp-controller="Cheese" asp-action="Remove">Remove</a></p>
